{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"]
  },

  "include": [
    "features/**/*.ts",
    "tests/**/*.ts",
    ".serenity-bdd/serenity-cucumber.ts"
  ],

  "exclude": ["node_modules"]
}
